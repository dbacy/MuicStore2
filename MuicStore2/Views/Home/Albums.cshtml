@model IEnumerable<MuicStore2.Models.Song>

@{
    ViewData["Title"] = "Albums";
}

<h1>Albums</h1>

<p>
    
</p>
<table class="table">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.YearReleased)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.FeaturedArtist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
           
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.YearReleased)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Album)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.FeaturedArtist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                <img src="../../@Html.DisplayFor(modelItem => item.ImagePath)" height="100" width="100" />
            </td>


            <td>
               <a class="btn btn-default" herf="ShoppingCart/@item.Album">Buy Album</a>
            </td>
        </tr>
}
    </tbody>
</table>
